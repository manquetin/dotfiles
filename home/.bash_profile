# ============================================================================ #
# ${HOME}/.bashrc
# ============================================================================ #

# ---------------------------------------------------------------------------- #
# Set PATH variable
# ---------------------------------------------------------------------------- #
if [ -d "${HOME}/bin" ]; then
    PATH="${HOME}/bin:${PATH}"
fi

# Enable machine-specific PATH if available
if [ -f "${HOME}/.bash_profile.local" ]; then
    . "${HOME}/.bash_profile.local"
fi

# ---------------------------------------------------------------------------- #
# Load .bashrc
# ---------------------------------------------------------------------------- #
if [ -f "${HOME}/.bashrc" ]; then
    . "${HOME}/.bashrc"
fi
